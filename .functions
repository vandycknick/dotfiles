#Nuget
function nuget(){
	if [ ! -f ~/bin/nuget/nuget.exe ]; then
		curl -sSL --create-dirs -o ~/bin/nuget/nuget.exe https://nuget.org/nuget.exe
	fi	
	mono ~/bin/nuget/nuget.exe $*
}


#!/bin/sh

# Use neovim for vim if present.
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

alias clip="xclip -selection clipboard"
alias code="codium --user-data-dir $XDG_DATA_HOME/VSCodium --extensions-dir $XDG_DATA_HOME/VSCodium/extensions"

alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	bc="bc -ql" \
	mkd="mkdir -pv"

alias open=xdg-open

alias tfs="tfswitch -b /home/nickvd/.local/bin/terraform"
